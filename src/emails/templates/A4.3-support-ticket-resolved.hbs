{{> header subject=(concat "Support ticket resolved: #" ticket_id) is_advisor=true}}

<h1>Support ticket resolved</h1>

<p class="lead-text">Ticket #{{ticket_id}} has been marked resolved.</p>

<div class="card">
  <div class="card-title">Resolution</div>
  <div class="card-content">
    <p>{{resolution_summary}}</p>
  </div>
</div>

<div class="button-center">
  <a href="{{survey_url}}" class="button">Rate Support</a>
  <a href="{{reopen_url}}" class="button button-secondary">Reopen Ticket</a>
</div>

{{> footer user_email=user_email is_critical=false current_year=current_year portal_url=portal_url support_url=support_url}}
