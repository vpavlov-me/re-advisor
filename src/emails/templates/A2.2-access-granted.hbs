{{> header subject=(concat "Access granted: " family_name " client workspace") is_advisor=true}}

<h1>Access granted</h1>

<p class="lead-text">You now have access to {{family_name}}'s client workspace.</p>

<div class="card">
  <div class="card-title">Your access</div>
  <div class="card-content">
    <p><strong>Modules:</strong> {{modules_summary}}</p>
    <p><strong>Permissions:</strong> {{permissions}}</p>
    {{#if is_council}}
    <p><strong>Council privileges:</strong> Granted</p>
    {{/if}}
  </div>
</div>

<div class="button-center">
  <a href="{{portal_url}}" class="button">Explore Portal</a>
</div>

{{> footer user_email=user_email is_critical=false current_year=current_year portal_url=portal_url support_url=support_url}}
