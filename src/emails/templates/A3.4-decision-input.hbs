{{> header subject=(concat "Input requested: " family_name " - " decision_title) is_advisor=true}}

<h1>Input requested</h1>

<p class="lead-text">Your advisory input is requested for {{decision_title}} ({{family_name}} engagement).</p>

<div class="card">
  <div class="card-title">Decision details</div>
  <div class="card-content">
    <p>{{decision_summary}}</p>
    <p><strong>Input needed by:</strong> {{deadline}}</p>
    <p><strong>Scope:</strong> {{scope}}</p>
  </div>
</div>

<div class="button-center">
  <a href="{{input_url}}" class="button">Provide Input</a>
</div>

{{> footer user_email=user_email is_critical=false current_year=current_year portal_url=portal_url support_url=support_url}}
