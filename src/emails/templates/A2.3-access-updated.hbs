{{> header subject=(concat "Access updated: " family_name " client workspace") is_advisor=true}}

<h1>Access updated</h1>

<p class="lead-text">Your access for {{family_name}} was updated.</p>

<div class="card">
  <div class="card-title">Changes</div>
  <div class="card-content">
    <p><strong>Added:</strong> {{modules_added}}</p>
    <p><strong>Removed:</strong> {{modules_removed}}</p>
    <p><strong>Permissions:</strong> {{permissions}}</p>
    <p><strong>Effective:</strong> {{effective_date}}</p>
  </div>
</div>

<div class="button-center">
  <a href="{{review_url}}" class="button">Review Changes</a>
</div>

{{> footer user_email=user_email is_critical=false current_year=current_year portal_url=portal_url support_url=support_url}}
