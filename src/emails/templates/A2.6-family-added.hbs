{{> header subject=(concat "New client added: " family_name) is_advisor=true}}

<h1>New client added to your portfolio</h1>

<p class="lead-text">{{family_name}} is now in your advisor dashboard.</p>

<div class="card">
  <div class="card-title">Access summary</div>
  <div class="card-content">
    <p><strong>Modules:</strong> {{modules_summary}}</p>
    <p><strong>Primary contact:</strong> {{primary_contact}}</p>
    <p><strong>Getting started:</strong> {{onboarding_step}}</p>
  </div>
</div>

<div class="button-center">
  <a href="{{portal_url}}" class="button">Get Started</a>
</div>

{{> footer user_email=user_email is_critical=false current_year=current_year portal_url=portal_url support_url=support_url}}
