{{> header subject=(concat "Meeting invitation: " family_name " - " meeting_title) is_advisor=true}}

<h1>Meeting invitation</h1>

<p class="lead-text">You're invited to {{meeting_title}} with the {{family_name}} team.</p>

<div class="card">
  <div class="card-title">Meeting details</div>
  <div class="card-content">
    <p><strong>Date:</strong> {{date}}</p>
    <p><strong>Time:</strong> {{time}}</p>
    <p><strong>Location/Link:</strong> <a href="{{join_url}}">Join</a></p>
    <p><strong>Your role:</strong> {{advisor_role}}</p>
  </div>
</div>

<div class="button-center">
  <a href="{{rsvp_yes_url}}" class="button">Confirm</a>
  <a href="{{rsvp_no_url}}" class="button button-secondary">Decline</a>
</div>

<div class="info-box info-box-info">
  <p>Prep materials: <a href="{{materials_url}}">View</a></p>
</div>

{{> footer user_email=user_email is_critical=false current_year=current_year portal_url=portal_url support_url=support_url}}
