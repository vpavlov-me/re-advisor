{{> header subject=(concat "Support ticket created: #" ticket_id) is_advisor=true}}

<h1>Support ticket created</h1>

<p class="lead-text">We received your request and opened ticket #{{ticket_id}}.</p>

<div class="card">
  <div class="card-title">Ticket summary</div>
  <div class="card-content">
    <p><strong>Issue:</strong> {{issue_summary}}</p>
    <p><strong>Priority:</strong> {{ticket_priority}}</p>
    <p><strong>Expected response:</strong> {{response_time}}</p>
  </div>
</div>

<div class="button-center">
  <a href="{{tracking_url}}" class="button">Track Ticket</a>
</div>

{{> footer user_email=user_email is_critical=false current_year=current_year portal_url=portal_url support_url=support_url}}
