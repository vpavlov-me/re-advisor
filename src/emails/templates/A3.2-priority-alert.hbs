{{> header subject=(concat "Priority alert: " family_name " - " event_type) is_advisor=true}}

<h1>Priority alert</h1>

<p class="lead-text">The {{family_name}} engagement needs your attention: {{event_type}}.</p>

<div class="card">
  <div class="card-title">Context</div>
  <div class="card-content">
    <p>{{context}}</p>
    <p><strong>Recommended action:</strong> {{action}}</p>
  </div>
</div>

<div class="button-center">
  <a href="{{cta_url}}" class="button">Take Action</a>
</div>

{{> footer user_email=user_email is_critical=true current_year=current_year portal_url=portal_url support_url=support_url}}
